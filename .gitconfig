[user]
  email = tammarut_nua@true-e-logistics.com
  name = tammarut

[github]
  user = tammarut

[alias]
  logline = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  diff-words = diff --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'

[credential]
  helper = cache --timeout=72000

[core]
  editor = lvim
  pager = diff-so-fancy | less --tabs=4 -RFX
  excludesfile = /Users/pleum/.gitignore_global

[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto
  ui = auto

[diff]
  tool = nvimdiff

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 52

[color "diff"]
  meta = 11
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse

[commit]
  template = /Users/pleum/.stCommitMsg

[help]
  autocorrect = 10

[merge]
  conflictstyle = diff3
[fetch]
	prune = true
